{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@class/*": [
        "src/app/class/*"
      ],
      "@component/*": [
        "src/app/component/*"
      ],
      "@service/*": [
        "src/app/service/*"
      ],
      "@sharedPopup/*": [
        "src/app/shared/popup/*"
      ],
      "@animation/*": [
        "src/app/shared/animation/*"
      ],
    },
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
